<main class="p-5 m-auto text-center flex-grow-1">
    <h1 style="margin: 2em auto 1em auto; color: #00378a; width: fit-content;" class="rounded-3 bg-light bg-opacity-50 p-1">{{title}}</h1>

  <div class="bg-light bg-opacity-50 p-2" style="width: max-content; margin: 2em auto 1em auto; height: 3em; width: max-content;">
    <input id="text" type="text" style="width: 360px" class="text-center" placeholder="search..."/>
    <img style="width: 40px; padding: 2px" id="search" src="data:image/png;base64,"/>
  </div>
  <div class="bg-secondary bg-opacity-75 text-white rounded" style="width: fit-content; margin: auto;">
    <a href="/?sort=asc" class="bg-primary bg-opacity-75 btn text-white m-1 p-1" style="margin-right: 5px;">A-Z</a>
    <a href="/?sort=desc" class="bg-primary bg-opacity-75 btn text-white m-1 p-1">Z-A</a>
  </div>

  <div class="container mt-4">
    <div class="row row-cols-4 p-4">
      {{#each products}}
        <div class="col md-4 p-4">
          <div
            class="card p-1 bg-white bg-opacity-75 rounded-3 border-primary border-1"
          >
            <img
              src="{{this.photo}}"
              class="card-img-top"
              alt="product"
              height="250"
            />
            <div class="card-body">
              <h5 class="card-title">{{this.title}}</h5>
              <p class="card-text">$ {{this.price}}</p>
              <p class="card-text">En stock: {{this.stock}}</p>
            </div>
          </div>
        </div>
      {{/each}}
    </div>
  </div>

  <span class="w-100 d-flex justify-content-center">
    {{#if prev}}
      <a
        class="btn btn-primary m-4 mt-0"
        href="/?title={{filter}}&page={{prev}}"
      >PREVIOUS PAGE</a>
    {{/if}}
    {{#if next}}
      <a
        class="btn btn-primary m-4 mt-0"
        href="/?title={{filter}}&page={{next}}"
      >NEXT PAGE</a>
    {{/if}}
  </span>
</main>
<script src="/scripts/index.js"></script>