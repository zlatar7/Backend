<main class="flex-grow-1 w-100 d-flex flex-column pt-5" style="min-height:  35em;">
    <br>
<h1 style="margin: 2em auto 1em auto; color: #00378a; width: fit-content;" class="rounded-3 bg-light bg-opacity-50 p-1">{{title}}</h1>
  {{#if message}}
  <p class="rounded-3 bg-dark fs-5 m-auto p-1 mt-5 text-primary text-center">{{message}}</p>
  {{else}}

    <section class="d-flex flex-column justify-content-center align-items-center m-auto mt-5 mb-5 bg-light" style="width: 360px;">
      
      <article class="w-100 d-flex border border-primary">
        <p style="width: 100px;" class="d-flex justify-content-start align-items-center m-0 p-2 fw-bold">Title</p>
        <p style="width: 100px;" class="d-flex justify-content-end align-items-center m-0 p-2 fw-bold">Price</p>
        <p style="width: 100px;" class="d-flex justify-content-end align-items-center m-0 p-2 fw-bold">Quantity</p>
      </article>
      {{#each orders}}
        <article class="w-100 d-flex border border-primary">

          <img src={{this.product_id.photo}} style="width: 100px; heigth: 100px" style="height: 100px; width: 100px" class="object-fit-cover m-0" alt="{{this.title}}"/>
          <p class="d-flex justify-content-end align-items-center m-0 p-1" style="width: 100px;">$ARS {{this.product_id.price}}</p>
          <p class="d-flex justify-content-end align-items-center m-0 p-1" style="width: 100px;"></p>
          <span class="d-flex justify-content-center align-items-center m-0 p-1" style="width: 60px;">
            <img class="deleteButton" id="{{this.id}}" src="data:image/png;base64,"/>
          </span>

        </article>
      {{/each}}   
    </section>

  <span class="w-100 d-flex justify-content-center">
    {{#if prev}}
      <a class="btn btn-primary m-4 mt-0" href="/?title={{filter}}&page={{prev}}"
      >PREVIOUS PAGE</a>
    {{/if}}
    {{#if next}}
      <a class="btn btn-primary m-4 mt-0" href="/?title={{filter}}&page={{next}}"
      >NEXT PAGE</a>
    {{/if}}
  </span>
  {{/if}}
</main>
<script src="/scripts/orders.js"></script>